<!DOCTYPE html>
<html>
  <head>
    <title>My Smials</title>
    <script src="../js/smail.js"></script>
  </head>
  <body>
    <h1>You are signed in as <%= me %></h1>
    <a href="logout"> logout</a>

    <form method="post" action="/createHome">
    <input name="name" class="span2" type="text" placeholder="Name your new home"></input>
    <button type="submit" class="btn">Create a new home</button>
    </form>

    <ul>
    <% for(var i=0; i<homes.length; i++) { %>
        <li>
            <div>
              <a href='/<%=home.objectID[i] %>'>
                <%= home[i].name %>
              </a>
              <form method="post" action="/addUser">
              <input name="username" class="span2" type="text" placeholder="user_name">
              <input  name="homeID" value='<%= homeID[i] %>' >
              <button type="submit" class="btn">Add User</button>
              </form>
            </div>
        </li>
    <% } %>
    </ul>

  </body>
</html>
